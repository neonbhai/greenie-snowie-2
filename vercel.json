{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.3"
    }
  },
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/api/404", "dest": "/api/404.php" },
    { "src": "/api/actions/save-newsletter", "dest": "/api/actions/save-newsletter.php" },
    { "src": "/api/actions/send-mail", "dest": "/api/actions/send-mail.php" },
    { "src": "/api/actions/unsubscribe", "dest": "/api/actions/unsubscribe.php" },
    { "src": "/api/(.*)\\.php", "dest": "/api/$1.php" },
    { "src": "/api/(.*)", "dest": "/api/$1.php" },
    { "src": "/(.*)\\.php$", "dest": "/api/$1.php" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}
